.cart-overlay {
    position: absolute;
    left: 4%;
    bottom: 4%;
    background-color: rgba(0, 0, 0, 0.6);
    border-radius: 4px;
    width: 5rem;
    height: 5rem;
    .inner {
        color: white;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        .icon-cart {
            font-size: 3rem;
        }
        .badge {
            width: 16px;;
            height: 16px;
            background-color: $color-red;
            circle();
            position: absolute;
            right: 10%;
            top: 15%;
            text-align: center;
            line-height: 16px;
            font-size: 1rem;
        }
    }
}
